{
	"name": "vk-filter-search",
	"version": "1.0.1",
	"description": "Support Filtering Search of keyword, post-type and taxonomy.",
	"main": "gulpfile.js",
	"scripts": {
		"start": "npm run build && wp-env start",
		"stop": "wp-env stop",
		"build": "gulp replace_text_domain && npm run build:block && npm run build:css && npm run build:js",
		"build:block": "wp-scripts build --config webpack.config.js",
		"build:css": "gulp build_css",
		"build:js": "webpack --config webpack2.config.js",
		"textdomain": "gulp replace_text_domain",
		"watch": "wp-scripts start --config webpack.config.js",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"format:js": "wp-scripts format-js",
		"lint:css": "wp-scripts lint-style --fix",
		"lint:js": "wp-scripts format-js inc/filter-search/package/src/ && wp-scripts lint-js inc/filter-search/package/src/ --fix",
		"make-pot": "wp i18n make-pot ./ --domain=vk-filter-search",
		"translate": "po2json languages/vk-filter-search-ja.po languages/vk-filter-search-ja-vk-filter-search-js.json -f jed",
		"composer:install": "wp-env run composer \"composer install\"",
		"phpunit": "wp-env run phpunit \"phpunit -c /var/www/html/wp-content/plugins/vk-filter-search/phpunit.xml.dist --verbose\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vektor-inc/vk-filter-search.git"
	},
	"author": "Vektor, Inc.",
	"license": "GPL-2.0-or-later",
	"bugs": {
		"url": "https://github.com/vektor-inc/vk-filter-search/issues"
	},
	"homepage": "https://github.com/vektor-inc/vk-filter-search#readme",
	"devDependencies": {
		"@babel/plugin-transform-react-jsx": "^7.13.12",
		"@babel/preset-env": "^7.13.12",
		"@wordpress/block-editor": "^5.3.0",
		"@wordpress/components": "^13.0.0",
		"@wordpress/element": "^2.20.0",
		"@wordpress/env": "^4.0.0",
		"@wordpress/i18n": "^3.19.0",
		"@wordpress/scripts": "14.0.1",
		"@wordpress/server-side-render": "^1.21.0",
		"babel-loader": "^8.2.2",
		"babel-plugin-module-resolver": "^4.1.0",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^7.0.1",
		"gulp-clean-css": "^4.3.0",
		"gulp-jsmin": "^0.1.5",
		"gulp-plumber": "^1.2.1",
		"gulp-rename": "^2.0.0",
		"gulp-replace": "^1.0.0",
		"gulp-sass": "^4.1.0",
		"npm-check-updates": "^11.3.0",
		"npm-run-all": "^4.1.5",
		"po2json": "^1.0.0-beta-3"
	}
}
