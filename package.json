{
  "name": "vk-filter-search",
  "version": "1.0.1",
  "description": "Support Filtering Search of keyword, post-type and taxonomy.",
  "main": "gulpfile.js",
  "scripts": {
    "start": "npm run build && wp-env start",
    "stop": "wp-env stop",
    "build": "npm run build:free && npm run build:query",
    "build:free": "wp-scripts build inc/filter-search/package/src/block.js --output-path=inc/filter-search/package/build",
    "build:query": "gulp query-js",
    "watch": "wp-scripts start inc/filter-search/package/src/block.js --output-path=inc/filter-search/package/build",
    "check-engines": "wp-scripts check-engines",
    "check-licenses": "wp-scripts check-licenses",
    "format:js": "wp-scripts format-js",
    "lint:css": "wp-scripts lint-style --fix",
	"lint": "run-s lint:*",
	"lint:common": "wp-scripts format-js inc/filter-search/package/src/common && wp-scripts lint-js inc/filter-search/package/src/common --fix",
	"lint:filter-search": "wp-scripts format-js inc/filter-search/package/src/filter-search && wp-scripts lint-js inc/filter-search/package/src/filter-search --fix",
	"lint:keyword-search": "wp-scripts format-js inc/filter-search/package/src/keyword-search && wp-scripts lint-js inc/filter-search/package/src/keyword-search --fix",
	"lint:post-type-search": "wp-scripts format-js inc/filter-search/package/src/post-type-search && wp-scripts lint-js inc/filter-search/package/src/post-type-search --fix",
	"lint:taxonomy-search": "wp-scripts format-js inc/filter-search/package/src/taxonomy-search && wp-scripts lint-js inc/filter-search/package/src/taxonomy-search --fix",
    "make-pot": "wp i18n make-pot ./ --domain=vk-filter-search",
    "translate": "po2json languages/vk-filter-search-ja.po languages/vk-filter-search-ja-vk-filter-search-js.json -f jed",
    "composer:install:win": "wp-env run composer \"composer install\"",
    "composer:install:mac": "wp-env run composer 'composer install'",
    "phpunit:win": "wp-env run phpunit \"phpunit -c /var/www/html/wp-content/plugins/vk-filter-search/phpunit.xml.dist --verbose\"",
    "phpunit:mac": "wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/vk-filter-search/phpunit.xml.dist --verbose'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vektor-inc/vk-filter-search.git"
  },
  "author": "Vektor, Inc.",
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/vektor-inc/vk-filter-search/issues"
  },
  "homepage": "https://github.com/vektor-inc/vk-filter-search#readme",
  "devDependencies": {
    "@wordpress/env": "^2.1.0",
    "@wordpress/scripts": "^12.5.0",
    "@wordpress/server-side-render": "^1.19.1",
    "gulp": "^4.0.2",
    "gulp-jsmin": "^0.1.5",
    "gulp-rename": "^2.0.0",
    "npm-check-updates": "^10.2.2",
    "po2json": "^1.0.0-beta-3"
  },
  "dependencies": {
    "@wordpress/i18n": "^3.16.0"
  }
}
